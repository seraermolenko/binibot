[Unit]
Description=Binibot RPi controller
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/binibot/rpi
# ðŸ‘‡ use your venvâ€™s python executable
ExecStart=/home/pi/binibot/rpi/.venv/bin/python /home/pi/binibot/rpi/main.py
Restart=on-failure
RestartSec=1
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target